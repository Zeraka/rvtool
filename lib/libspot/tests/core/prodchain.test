. ./defs
set -e

set x
shift
for i in `seq 1 42`; do
  ltl2tgba "{a[*$i]}[]->GFb" > $i.hoa
done
for i in *.hoa; do
  set x "$@" --product $i
  shift
done
shift
autfilt "$@" 2> error && exit 1
grep 'Too many acceptance sets used' error
autfilt -B "$@" > result
test "127,253,508,1" = `autfilt --stats=%s,%e,%t,%a result`

set x
shift
for i in *.hoa; do
  set x "$@" --product-or $i
  shift
done
shift
autfilt "$@" 2> error && exit 1
grep 'Too many acceptance sets used' error
autfilt -B "$@" > result
test "45,89,180,1" = `autfilt --stats=%s,%e,%t,%a result`
