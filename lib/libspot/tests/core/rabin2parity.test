. ./defs
set -e

(
cat <<EOF
HOA: v1
name: "FXGa"
properties: deterministic
properties: complete
States: 2
Start: 0
acc-name: Rabin 1
Acceptance: 2 Fin(0)&Inf(1)
AP: 1 "a"
--BODY--
State: 0
[t] 1 {0 1 }
State: 1
[0] 1 {1 }
[!0] 1 {0 1 }
--END--
HOA: v1
States: 1
Start: 0
AP: 1 "a"
acc-name: Streett 1
Acceptance: 2 Fin(0) | Inf(1)
properties: trans-labels explicit-labels state-acc complete
properties: deterministic
--BODY--
State: 0
[t] 0
--END--
HOA: v1
States: 3
Start: 0
AP: 1 "a"
acc-name: Streett 3
Acceptance: 6 (Fin(0) | Inf(1)) & (Fin(2) | Inf(3)) & (Fin(4) | Inf(5))
properties: trans-labels explicit-labels trans-acc deterministic
--BODY--
State: 0
[!0] 0 {1 3}
[0] 1 {}
State: 1
[0] 2 {2}
State: 2
[!0] 0 {0 4}
[0] 2 {}
--END--
EOF
# random automata
randaut 4 -n100 -u -D --acceptance="Rabin 0..6"
randaut 4 -n100 -u -D --acceptance="Streett 0..6"
) | \
autcross \
  "autfilt --parity" \
  "autfilt"

