. ./defs

cat >in <<EOF
HOA: v1
States: 3
Start: 2
AP: 3 "a" "b" "c"
acc-name: Buchi
Acceptance: 2 Fin(0)&Inf(1) | Fin(1)&Inf(0)
--BODY--
State: 0
[0] 0 {1}
[!0] 0 {0}
State: 1
[2] 0 {0}
[1&!2] 1 {1}
State: 2
[2] 0
[!0&1&!2] 1
[0&!2] 2 {0 1}
--END--
HOA: v1
States: 1
Start: 0
AP: 3 "p0" "p1" "p2"
Acceptance: 3 (Fin(1) | Inf(0)) & (Fin(2) | Inf(1))
properties: trans-labels explicit-labels state-acc deterministic
--BODY--
State: 0 {0 1 2}
[0&!1&!2] 0
--END--
EOF

cat >expected <<EOF
HOA: v1
States: 3
Start: 2
AP: 3 "a" "b" "c"
Acceptance: 4 (Fin(2) & Inf(1)) | (Fin(3) & Inf(0))
properties: trans-labels explicit-labels trans-acc deterministic
--BODY--
State: 0
[0] 0 {1 3}
[!0] 0 {0 2}
State: 1
[2] 0 {0 2}
[1&!2] 1 {1 3}
State: 2
[2] 0
[!0&1&!2] 1
[0&!2] 2 {0 1 2 3}
--END--
HOA: v1
States: 1
Start: 0
AP: 3 "p0" "p1" "p2"
Acceptance: 4 (Fin(3) | Inf(0)) & (Fin(2) | Inf(1))
properties: trans-labels explicit-labels state-acc deterministic
--BODY--
State: 0 {0 1 2 3}
[0&!1&!2] 0
--END--
EOF

run 0 autfilt --separate-sets in -H > out
diff out expected
