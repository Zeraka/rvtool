. ./defs

if ! test -x "`command -v spins`"; then
  echo "spins not installed."
  exit 77
fi

set -e

for opt in '' '-z'; do

  run 0 ../modelcheck $opt -E $srcdir/elevator2.1.pm \
    '!G("req[1]==1" -> (F("p==1" && "cabin_0._pc==2")))'
  run 0 ../modelcheck $opt -e $srcdir/elevator2.1.pm \
    'F("p==2")'
done
