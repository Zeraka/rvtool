State: [f] 3
State: [f] 4
State: [f] 5
--END--
EOF

run 0 ../kripkecat input1 > input1.out
run 0 ../kripkecat input1.out > input1.out2


cat >input2 <<EOF
HOA: v1
States: 4
Start: 0
AP: 0
Acceptance: 0 t
properties: state-labels
--BODY--
State: [t] 0
1 2 3
--END--
